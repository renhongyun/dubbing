.banner {
  margin: 30rpx auto;
  margin-bottom: 0;
  width: 88%;
  border-radius: 20rpx;
  height: 300rpx; 
  overflow: hidden;
  position: relative;
  /* background-color: red; */
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.swiper .swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper .indicator-dots {
  position: absolute;
  bottom: 10px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper .indicator-dots .swiper-pagination-bullet {
  background: rgba(0, 0, 0, 0.3);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin: 0 5rpx;
}
