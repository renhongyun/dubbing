/* pages/home/home.wxss */
.box {
  padding: 0 40rpx;
}
page {
  background-color: #f7f6fb;
}
.cover-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 10px;
}
.image-box {
  overflow: hidden;
  border-radius: 15rpx;
  height: 260rpx;
  width: 42%;
  position: relative;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}
.cover {
  width: 100%;
  height: 270rpx;
}
.title {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  color: #fff;
  /* width: auto; */
  width: 40px;
  font-size: 16px;
  letter-spacing: 8rpx;
  font-weight: 700;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5); /* 添加文字阴影 */
}
.play {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}
.play-icon {
  width: 44rpx;
  height: 44rpx;
}
.bar {
  width: 240rpx;
  height: 66rpx;
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #fff;
  text-align: center;
  line-height: 66rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}
.tag-container {
  margin: 0 auto;
  margin-top: 10rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
}
.wx {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  padding: 28rpx 0;
}
.wxicon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 6rpx;
}
.tip {
  font-size: 22rpx;
  color: #a2a2a2;
}
