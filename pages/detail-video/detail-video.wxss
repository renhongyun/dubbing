page {
  background-color: #f7f6fb;
}

.video {
  width: 100%;
}

.title {
  padding: 30rpx 30rpx;
  font-size: larger;
}

.video-list {
  display: flex;
  justify-content: space-between; /* 修改为 space-between */
  flex-wrap: wrap;
  padding: 0 40rpx;
  position: relative;
}

.item {
  width: 48%; 
  margin-bottom: 30rpx; /* 增加底部间距 */
}

/* 为奇数时的最后一个视频项设置样式 */
.video-list .item:nth-last-child(2):nth-child(odd) {
  width: 48%; /* 保持与其他项目一致 */
  margin-right: 0; /* 确保没有右边距 */
}
